ALGORITMO
DECLARE saldo_medio, credito NUMERICOS

ESCREVA "Digite seu saldo médio do último ano:"
RECEBA saldo_medio

SE saldo_medio > 400
ENTAO 
	INICIO 
		credito = saldo_medio*0.3
	FIM
SENAO SE saldo_medio >= 300
ENTAO 
	INICIO 
		credito = saldo_medio*0.25
	FIM
SENAO SE saldo_medio >= 200
ENTAO 
	INICIO 
		credito = saldo_medio*0.2
	FIM
SENAO
	INICIO
		credito = saldo_medio*0.1
	FIM
FIM_SE
ESCREVA "SALDO MEDIO:", saldo_medio, "\nCRÉDITO ESPECIAL:", credito	
FIM_ALGORITMO